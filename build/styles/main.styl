.tags
  border 1px solid #CCC
  width 1000px
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.5
  border-radius 4px
  display block

  .tag-cont
    display block

    .tag
      background-color #EE7407
      border-radius 2px
      color #fff
      display block
      float left
      padding 4px 20px 4px 0
      margin 5px 10px 0 0

      .tag-value
        padding-left 10px

      .tag-remove
        background-color #D66806
        display inline-block
        width 30px
        text-align center

        a
          color #fff
          text-decoration none
  input
    width 300px
    height 30px

