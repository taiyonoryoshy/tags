.tags
  background-color red

  .tag-cont
    background-color blue
    list-style none
    margin 0
    padding 0

    .tag
      background-color #67b021
      float left
      display inline-block
      margin-right 10px
      margin-bottom 10px
      cursor move

      .tag-remove
        display inline-block

  .tag-input
    float left

  .tags-clear
    clear both